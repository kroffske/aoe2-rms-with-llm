/* Arabia-style map with extra gold */
/* Compatibility: Definitive Edition */

/* ============================================ */
/* PLAYER_SETUP                                 */
/* ============================================ */
<PLAYER_SETUP>
random_placement
ai_info_map_type ARABIA 0 0 0

if TEAM_GAME
  grouped_by_team
endif

/* ============================================ */
/* LAND_GENERATION                              */
/* ============================================ */
<LAND_GENERATION>
base_terrain GRASS

create_player_lands {
  terrain_type GRASS
  land_percent 100
  base_size 9
  border_fuzziness 15
  other_zone_avoidance_distance 7
  clumping_factor 15
}

/* ============================================ */
/* ELEVATION_GENERATION                         */
/* ============================================ */
<ELEVATION_GENERATION>
enable_balanced_elevation

create_elevation 5 {
  base_terrain GRASS
  number_of_clumps 20
  number_of_tiles 2500
  set_scale_by_groups
  spacing 3
}

/* ============================================ */
/* CLIFF_GENERATION                             */
/* ============================================ */
<CLIFF_GENERATION>
min_number_of_cliffs 3
max_number_of_cliffs 8
min_length_of_cliff 3
max_length_of_cliff 6
cliff_curliness 10
min_distance_cliffs 5

/* ============================================ */
/* TERRAIN_GENERATION                           */
/* ============================================ */
<TERRAIN_GENERATION>

/* Main forests */
create_terrain FOREST {
  base_terrain GRASS
  land_percent 9
  number_of_clumps 10
  set_scale_by_groups
  set_avoid_player_start_areas
  spacing_to_other_terrain_types 3
  clumping_factor 20
}

/* Secondary forests */
create_terrain FOREST {
  base_terrain GRASS
  land_percent 3
  number_of_clumps 6
  set_scale_by_groups
  set_avoid_player_start_areas
  spacing_to_other_terrain_types 2
}

/* Dirt patches */
create_terrain DIRT {
  base_terrain GRASS
  land_percent 8
  number_of_clumps 16
  set_scale_by_size
  spacing_to_other_terrain_types 0
}

/* Dirt2 patches */
create_terrain DIRT2 {
  base_terrain GRASS
  land_percent 4
  number_of_clumps 12
  set_scale_by_size
}

/* Small grass patches on dirt */
create_terrain GRASS3 {
  base_terrain DIRT
  land_percent 25
  number_of_clumps 8
  set_scale_by_groups
}

